<span class="badge @GetBadgeClass()">
    @Text
</span>

@code {
    [Parameter] public string Status { get; set; } = "";
    [Parameter] public string Text { get; set; } = "";

    private string GetBadgeClass()
    {
        return Status.ToLowerInvariant() switch
        {
            "online" => "bg-success",
            "offline" => "bg-danger",
            "warning" => "bg-warning",
            "processing" => "bg-info",
            _ => "bg-secondary"
        };
    }
}